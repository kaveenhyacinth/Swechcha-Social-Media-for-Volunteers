<!DOCTYPE html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    
<!--Using  BootstrapCSS-->
<link rel="stylesheet" type="text/css" href="/assets/styles/bootstrap.min.css">
<!--Using Fonts-->
	<link rel="stylesheet" type="text/css" href="/assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<!--Using Icon Font -->
    <link rel="stylesheet" type="text/css" href="/assets/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    
<!--Using Animate CSS-->
	<link rel="stylesheet" type="text/css" href="/assets/styles/animate.css">


<!--Using HAmburgers CSS-->	
	<link rel="stylesheet" type="text/css" href="/assets/styles/hamburgers.min.css">

<!--Using Select CSS-->
	<link rel="stylesheet" type="text/css" href="/assets/styles/select2.min.css">



<!--Using Util css  and main css-->
	<link rel="stylesheet" type="text/css" href="/assets/styles/util.css">
	<link rel="stylesheet" type="text/css" href="/assets/styles/login.css">
<!-- Start of the Login -->
</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
				<form class="login100-form validate-form" method="POST" action="/auth/volunteer/signin">
					<span class="login100-form-title p-b-55">
						Login
					</span>

					<!-- Used a Validation-->
					<div class="wrap-input100 validate-input m-b-16" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" required name="email" placeholder="Email">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-envelope"></span>
						</span>
					</div>
					<!--Password Validation-->
					<div class="wrap-input100 validate-input m-b-16" data-validate = "Password is required">
						<input class="input100" type="password" required name="password" placeholder="Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<span class="lnr lnr-lock"></span>
						</span>
					</div>
                    <!--Used a checkbox-->
					<div class="contact100-form-checkbox m-l-4">
						<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
						<label class="label-checkbox100" for="ckb1">
							Remember me
						</label>
					</div>
					
					<div class="container-login100-form-btn p-t-25">
						<button class="login100-form-btn">
							Login
						</button>&nbsp;
					</div>
				</form>
					<a class="txt1 bo1 hov1" href="#">
						Forgot Password ?						
					</a>

					<div class="text-center w-full p-t-42 p-b-22">
						<span class="txt1">
							Or login with
						</span>
					</div>

					<a href="#" class="btn-face m-b-10">
						<i class="fa fa-facebook-official"></i>
						Facebook
					</a>

					
					<a href="#" class="btn-google m-b-10">
						<img src="/assets/images/icons/icon-google.png" alt="GOOGLE">
						Google
					</a>

				
						<span class="display-5">Not a member ?</span>
						<a " class="txt1 bo1 hov1" href="/register/volunteer"> <span class="display-5 btn btn-sm btn-success">
							 Sign up now</span>						
						</a>
						
					
						<a href="/home" class="btn-home m-b-10 btn btn-sm btn-primary">
							<i class="fa fa-home"></i>
							Home
						</a>
					</div>
				
			</div>
		</div>
	</div>
	
  <!--Using JQuery Scripts-->	

	<script src="/assets/src/jquery-3.2.1.min.js"></script>


    <!--Using bootstrap Scripts-->

        <script src="/assets/src/popper.js"></script>
        <script src="/assets/src/bootstrap.min.js"></script>


    <!--Using Select Scripts-->

        <script src="/assets/src/select2.min.js"></script>


    <!--Using Main Javascript-->

        <script src="/assets/src/main.js"></script>

</body>
</html>